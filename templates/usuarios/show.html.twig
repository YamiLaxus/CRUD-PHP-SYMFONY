{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdUsuario</th>
                <td>{{ usuario.idUsuario }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ usuario.usuario }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuario.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_usuarios_index') }}" class="btn-neon">Volver</a>

    <a href="{{ path('app_usuarios_edit', {'idUsuario': usuario.idUsuario}) }}" class="btn-neon">Editar</a>

    {{ include('usuarios/_delete_form.html.twig') }}
{% endblock %}
